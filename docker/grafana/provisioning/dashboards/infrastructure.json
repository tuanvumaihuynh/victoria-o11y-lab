{
  "uid": "infrastructure",
  "title": "Infrastructure",
  "tags": ["infrastructure", "host"],
  "timezone": "browser",
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": []
  },
  "panels": [
    {
      "type": "row",
      "title": "CPU",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "CPU Usage",
      "datasource": {
        "type": "prometheus",
        "uid": "victoriametrics"
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 1 },
      "targets": [
        {
          "expr": "sum by (mode)(rate(host_cpu_seconds_total[$__rate_interval])) / ignoring(mode) group_left sum(rate(host_cpu_seconds_total[$__rate_interval])) * 100",
          "legendFormat": "{{mode}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": {
            "lineWidth": 1,
            "fillOpacity": 40,
            "stacking": {
              "mode": "normal"
            }
          }
        }
      }
    },
    {
      "type": "row",
      "title": "Memory",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Memory Usage",
      "datasource": {
        "type": "prometheus",
        "uid": "victoriametrics"
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 10 },
      "targets": [
        {
          "expr": "host_memory_used_bytes",
          "legendFormat": "Used"
        },
        {
          "expr": "host_memory_total_bytes",
          "legendFormat": "Total"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "min": 0,
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "type": "gauge",
      "title": "Memory Usage %",
      "datasource": {
        "type": "prometheus",
        "uid": "victoriametrics"
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 10 },
      "targets": [
        {
          "expr": "host_memory_used_bytes / host_memory_total_bytes * 100",
          "legendFormat": "Memory"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          }
        }
      }
    },
    {
      "type": "row",
      "title": "Disk I/O",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 18 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Disk I/O Throughput",
      "datasource": {
        "type": "prometheus",
        "uid": "victoriametrics"
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 19 },
      "targets": [
        {
          "expr": "sum(rate(host_disk_read_bytes_total[$__rate_interval]))",
          "legendFormat": "Read"
        },
        {
          "expr": "sum(rate(host_disk_write_bytes_total[$__rate_interval]))",
          "legendFormat": "Write"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "min": 0,
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Disk IOPS",
      "datasource": {
        "type": "prometheus",
        "uid": "victoriametrics"
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 19 },
      "targets": [
        {
          "expr": "sum(rate(host_disk_reads_completed_total[$__rate_interval]))",
          "legendFormat": "Reads"
        },
        {
          "expr": "sum(rate(host_disk_writes_completed_total[$__rate_interval]))",
          "legendFormat": "Writes"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "iops",
          "min": 0,
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "type": "row",
      "title": "Filesystem",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 27 },
      "collapsed": false
    },
    {
      "type": "bargauge",
      "title": "Filesystem Usage %",
      "datasource": {
        "type": "prometheus",
        "uid": "victoriametrics"
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 28 },
      "targets": [
        {
          "expr": "host_filesystem_used_bytes / host_filesystem_total_bytes * 100",
          "legendFormat": "{{device}} {{mountpoint}}"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "orientation": "horizontal",
        "displayMode": "gradient"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      }
    },
    {
      "type": "row",
      "title": "Network",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 36 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Network Traffic",
      "datasource": {
        "type": "prometheus",
        "uid": "victoriametrics"
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 37 },
      "targets": [
        {
          "expr": "sum(rate(host_network_receive_bytes_total[$__rate_interval]))",
          "legendFormat": "Receive"
        },
        {
          "expr": "sum(rate(host_network_transmit_bytes_total[$__rate_interval]))",
          "legendFormat": "Transmit"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "min": 0,
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    }
  ],
  "schemaVersion": 39,
  "version": 1
}
